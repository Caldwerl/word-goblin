{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "root": true,
    "extends": "airbnb",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "react/jsx-indent": [
            2,
            4
        ],
        "react/no-danger": [
            0
        ],
        "react/jsx-indent-props": [
            2,
            4
        ],
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "react/forbid-prop-types": [0],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "max-len": [
            0
        ],
        "no-param-reassign": [
            "error",
            { "props": false }
        ],
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": [
                    "**/*.test.jsx",
                    "**/setupTests.jsx",
                    "**/mountWrap.jsx",
                    "webpack.config.js"
                ]
            }
        ]
    }
}
